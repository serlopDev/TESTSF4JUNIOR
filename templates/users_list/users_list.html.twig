{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <h1 class="users-title">Listado de usuarios</h1>
        {% for user in users %}
        <article class="user-box">
            <p class="user-field">NOMBRE:</p>
            <p class="user-data">{{user.name}}</p>
            <p class="user-field">EMAIL:</p>
            <p class="user-data">{{user.email}}</p>
            <p class="user-field">COMENTARIO:</p>
            <p class="user-data">{{user.coment}}</p>

            <div class="buttons-container-u">
            <a id="edit-button" class="edit-button-u" href="{{path('edit_user', {'id': user.id})}}">Editar</a>
            <a id="delete-button" class="cancel-button-u" href="{{path('delete_user', {'id': user.id})}}">Eliminar</a>
            </div>
        </article>
        {% endfor %}
    </div>
{% endblock %}
