{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block body %}
<div class="content">
<div class="form-box">

<form class="login-form" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Has iniciado sesión cómo {{ app.user.username }}, <a href="{{ path('app_logout') }}">Cerrar sesión</a>
        </div>
    {% endif %}

    <h1 class="users-title">Por favor, Inicie sesión</h1>
    <label for="inputEmail" class="labels-login">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="login-inputs" placeholder="usuario" required autofocus>
    <label for="inputPassword" class="labels-login">Contraseña</label>
    <input type="password" name="password" id="inputPassword" class="login-inputs" placeholder="contraseña" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="access-btn" type="submit">
        Iniciar sesión
    </button>

    <a href={{path('register')}} class="go-register">¿Aún no te has registrado?</a>
</form>
</div>
</div>
{% endblock %}
